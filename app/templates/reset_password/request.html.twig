{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <section class="request-password py-5" id="request-password">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 py-3 border border-2 bg-gradient">
                    <h1>{{ 'reset.your.password'|trans|raw }}</h1>

                    {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small>
                            {{ 'send_email'|trans({},'reset-password')|raw }}
                        </small>
                    </div>

                    <button class="btn btn-primary my-3">{{ 'send.password.reset.email'|trans|raw }}</button>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
