<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
              crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>
<body>
<section class="nav_bar mb-5" id="nav-bar">
    <nav class="navbar navbar-expand-lg bg-body-tertiary shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand text-danger fw-bold fs-4" href="#">ToDoList</a>
            <div class="d-flex">
                <div class="dropdown mx-2">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                        {{ 'language'|trans|raw }}
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item"
                               href="{{ path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params')|merge({_locale: 'en'})) }}">En</a>
                        </li>
                        <li><a class="dropdown-item"
                               href="{{ path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params')|merge({_locale: 'uk'})) }}">Uk</a>
                        </li>
                    </ul>
                </div>
                <div class="dropdown">
                    <button class="btn btn-danger px-3" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <i class="bi bi-menu-up"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href={{ path('app_profile') }}>{{ 'my.profile'|trans|raw }}</a>
                        </li>
                        <li><a class="dropdown-item" href={{ path('app_task') }}>{{ 'tasks'|trans|raw }}</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_week') }}">{{ 'weeks.calendar'|trans|raw }}</a>
                        </li>
                        <li><a class="dropdown-item" href="{{ path('app_month') }}">{{ 'month.calendar'|trans|raw }}</a>
                        </li>
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">{{ 'log.out'|trans|raw }}</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</section>
<section class="alert" id="alert">
    <div class="container">
        <div class="row">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="text-center alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|trans|raw }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
</section>
{% block body %}{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
