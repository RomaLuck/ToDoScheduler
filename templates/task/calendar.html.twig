{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    <section id="calendar" class="calendar mt-5">
        <div class="week-info">
            <p><a href="{{ path('previous_week',{'week':week}) }}">Previous</a></p>
            <p>Current week: {{ week }}</p>
            <p><a href="{{ path('next_week',{'week':week}) }}">Next</a></p>
        </div>
        <div class="container">
            <div class="table-responsive">
                <table class="table table-bordered text-center">
                    <thead>
                    <tr class="bg-light-gray">
                        <th class="text-uppercase">Time\Day
                        </th>
                        {% for day in weekDays %}
                            <th class="text-uppercase">{{ day }}</th>
                        {% endfor %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for j in range(0,23) %}
                        <tr>
                            <th class="align-middle">{{ j|intToTime }}</th>
                            {% set daysOfWeek = [] %}
                            {% for i in 0..6 %}
                                {% set day = firstDayOfWeek|date_modify('+'~i~' days') %}
                                {% set daysOfWeek = daysOfWeek|merge([day]) %}
                            {% endfor %}
                            {% for day in daysOfWeek %}
                                <td>
                                    {% for task in weekTasks %}
                                        {% if task.deadLine|format_datetime('none', 'short', locale='pl')|hourFilter == j
                                            and task.deadLine|date('Y-m-d') == day|date('Y-m-d') %}
                                            <span class="bg-sky padding-5px-tb padding-15px-lr border-radius-5 margin-10px-bottom text-white font-size16 xs-font-size13">{{ task.title }}</span>
                                        {% endif %}
                                    {% endfor %}
{#                                    <div class="margin-10px-top font-size14">{{ j|intToTime }}</div>#}
{#                                    <div class="font-size13 text-light-gray">{{ day|date('Y-m-d') }}</div>#}
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}